								<phase>process-resources</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<target>
										<!-- zip the file -->
										<zip
											destfile="${sakai.zip.path}/tomcat.zip">
											<fileset dir="${maven.tomcat.home}" />
										</zip>
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>

